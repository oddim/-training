using System;

namespace ConsoleApp21
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string SumCommand = "sum";
            const string ExitCommand = "exit";

            int[] numbers1 = new int[0];
            int[] numbers2 = new int[0];

            bool isRun = true;
           
            string userInput = null;

            int currentIndex = 1;
            int sumAllNumbers = 0;

            while (isRun)
            {
                Console.Write($"Заполните массив. Для получения суммы элементов массива введите {SumCommand}. Если хотите выйти из программы, то введите {ExitCommand}. \n\nМассив: ");

                for (int i = 0; i < numbers1.Length; i++)
                {
                    Console.Write(numbers1[i] + " ");
                }
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case SumCommand:
                        Console.Clear();

                        Console.Write("\n\nМассив: ");

                        for (int i = 0; i < numbers1.Length; i++)
                        {
                            sumAllNumbers += numbers1[i];

                            Console.Write(numbers1[i] + " ");
                        }
                        Console.WriteLine();
                        Console.WriteLine(sumAllNumbers + " - сумма элементов массива \n\n");

                        sumAllNumbers = 0;
                        continue;

                    case ExitCommand:
                        isRun = false;
                        break;

                    default:
                            numbers2 = new int[currentIndex];

                            for (int i = 0; i < currentIndex - 1; i++)
                            {
                                numbers2[i] = numbers1[i];
                            }
                            numbers2[numbers2.Length - 1] = Convert.ToInt32(userInput);
                            numbers1 = numbers2;
                        break;
                }
                Console.Clear();

                currentIndex++;
            }
            Console.WriteLine("Программа завершена");
        }
    }
}
