using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Text.RegularExpressions;
using System.Threading.Tasks;

namespace ConsoleApp9
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int amountAtteptsPasswords = 3;
            int availableAtteptsPasswords = amountAtteptsPasswords;
            
            string passwordCurrent = "qwer";
            string passwordInput = "";

            bool isNotMatchPassword = true;
            bool isRun = true;

            Console.WriteLine($"У вас {amountAtteptsPasswords} попытки для ввода пароля");

            while (isRun)
            {
                Console.WriteLine("Введите пароль");
                passwordInput = Console.ReadLine();

                amountAtteptsPasswords--;
                availableAtteptsPasswords--;
                isNotMatchPassword = passwordCurrent != passwordInput;
                isRun = amountAtteptsPasswords > 0 && isNotMatchPassword;

                if (amountAtteptsPasswords != 0 && isNotMatchPassword)
                {
                 Console.WriteLine($"Пароль неверный. Введите еще. Осталось у вас попыток {availableAtteptsPasswords}");
                }
            }

            if (passwordCurrent == passwordInput)
            {
                Console.WriteLine("Здесь ничего интересного");
            }
            else
            {
                Console.WriteLine("Попытки закончились");
            }
        }
    }
}
