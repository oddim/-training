using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp6
{
    internal class Programm
    {
        static void Main(string[] args)
        {
            const string InterpretationWordСonstantCommand = "Константа"; 
            const string InterpretationWordVariableCommand = "Переменная" ;
            const string InterpretatioWordIterationCommand = "Итерация";
            const string RandomNumberCommand = "Рандом";
            const string ClearingConsoleCommand = "Очистить консоль";
            const string EndProgrammCommand = "Выход";
            
            string userInput = "";
            
            Random random = new Random();
            int outputRandomNumber;
            int maxOutputRandomNumber = 1000;

            while(userInput != EndProgrammCommand)
            {
                Console.WriteLine($"Введите нужную команду для исполнения \n \n Для толкования некоторых слов есть команды - {InterpretationWordСonstantCommand}, {InterpretationWordVariableCommand}, {InterpretatioWordIterationCommand} \n Чтобы получить рандомное число - {RandomNumberCommand} \n Если хотите очистить консоль - {ClearingConsoleCommand} \n Для завершения программы - {EndProgrammCommand}");
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case InterpretationWordСonstantCommand:
                        Console.WriteLine("Константа - это постоянная величина в ряду изменяющихся ");
                        break;

                    case InterpretationWordVariableCommand:
                        Console.WriteLine("Переменная (программирование) — поименованная, либо адресуемая иным способом область памяти");
                        break;

                    case InterpretatioWordIterationCommand:
                        Console.WriteLine("Итерация - это организация обработки данных, при которой действия повторяются многократно, не приводя при этом к вызовам самих себя");
                        break;

                    case RandomNumberCommand:
                        outputRandomNumber = random.Next(0, maxOutputRandomNumber);
                        Console.WriteLine($"Рандомное число - {outputRandomNumber}");
                        break;

                    case ClearingConsoleCommand:
                        Console.Clear();
                        break;

                    case EndProgrammCommand:
                        Console.WriteLine("Программа завершена");
                        break;

                    default:
                        Console.WriteLine("Такой команды нет");
                        break;
                }
             }
        }
    }
}
